<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HiitHard.Pages.EditWorkoutPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="nameLabel" TextColor="White" FontSize="32" FontFamily="Montserrat" HorizontalOptions="Center" VerticalOptions="Center"/>
            <BoxView HeightRequest="4" WidthRequest="300" Color="#B69213" HorizontalOptions="Center"/>
            <Label x:Name="typeLabel" TextColor="White" FontSize="14" FontFamily="Montserrat" HorizontalOptions="Center"  HeightRequest="30" VerticalTextAlignment="End"/>
            <ScrollView>
                <StackLayout x:Name="circuitStack">

                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>